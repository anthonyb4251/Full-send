<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JarvisAI" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/cyan</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Navigation bar color. -->
        <item name="android:navigationBarColor">@color/dark_background</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/cyan</item>
        <!-- Background colors -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_background</item>
        <!-- Button style -->
        <item name="materialButtonStyle">@style/Widget.JarvisAI.Button</item>
        <!-- Card style -->
        <item name="materialCardViewStyle">@style/Widget.JarvisAI.CardView</item>
    </style>

    <!-- Custom button style -->
    <style name="Widget.JarvisAI.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Custom card style -->
    <style name="Widget.JarvisAI.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primary_dark</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">8dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Text styles -->
    <style name="TextAppearance.JarvisAI.Headline" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/neon_green</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextAppearance.JarvisAI.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.JarvisAI.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/cyan</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
